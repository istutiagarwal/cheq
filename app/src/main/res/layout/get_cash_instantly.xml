<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#6AD4A0"
        app:cardCornerRadius="17dp"
        app:cardElevation="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="17dp"
            android:layout_marginBottom="2dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/get_cash_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/green_radient_background"
                android:shadowColor="#6AD4A0">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/get_cash_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/get_cash_instantly"
                    android:textColor="#2F3131"
                    android:layout_marginStart="17dp"
                    android:fontFamily="@font/basier_circle_medium"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/get_cash_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="17dp"
                    android:textColor="#2F3131"
                    android:fontFamily="@font/basier_circle_bold"
                    android:textSize="24sp"
                    android:text="₹587"
                    android:paddingEnd="10dp"
                    android:layout_marginBottom="22dp"
                    app:layout_constraintTop_toBottomOf="@id/get_cash_title"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/forward_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/forward_green_arrow"
                    app:layout_constraintStart_toEndOf="@id/get_cash_amount"
                    app:layout_constraintTop_toBottomOf="@id/get_cash_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/chip_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹587"
                    android:textColor="#6E7170"
                    android:fontFamily="@font/basier_circle_medium"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/chip_price_equals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="="
                    android:layout_marginRight="3dp"
                    android:textColor="#6E7170"
                    android:fontFamily="@font/basier_circle_medium"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/chip_price"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/chip_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="1"
                    android:layout_marginRight="3dp"
                    android:textColor="#6E7170"
                    android:fontFamily="@font/basier_circle_medium"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/chip_price_equals"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/chip_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/single_chips"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="3dp"
                    app:layout_constraintEnd_toStartOf="@id/chip_quantity"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/get_cash_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/get_cash_image"
                    android:layout_marginEnd="17.22dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</layout>