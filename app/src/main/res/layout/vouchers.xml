<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vouchers_card_layout"
            android:layout_width="171dp"
            android:layout_height="75dp"
            android:background="@drawable/grey_rounded_corner"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="29dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/vouchers_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_vouchers"
                app:textAllCaps="true"
                android:textColor="#858989"
                android:fontFamily="@font/basier_circle_semi_bold"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/chips_balance_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:src="@drawable/vouchers_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vouchers_card_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>