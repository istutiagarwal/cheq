<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bank_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bob"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:src="@drawable/bob" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/bank_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Axis Platinum" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bank_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bank_name"
            app:layout_constraintLeft_toRightOf="@id/bank_image"
            tools:text="credit" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bank_amount_payable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="â‚¹60000" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bank_due_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bank_amount_payable"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="due in 2 days" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>