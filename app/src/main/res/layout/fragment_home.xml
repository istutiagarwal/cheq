<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/home_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="33dp"
            android:isScrollContainer="true"
            tools:context=".ui.HomeFragment"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/total_due_cons_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/rectangle_40573"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>


                <include
                    layout="@layout/home_top_bar"
                    android:id="@+id/home_top_bar"
                    android:layout_marginTop="33dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include layout="@layout/total_due_layout"
                    android:id="@+id/total_due_layout"
                    app:layout_constraintTop_toBottomOf="@id/home_top_bar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="33dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/your_credit_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_credit_score"
                android:textColor="#6E7170"
                android:fontFamily="@font/basier_circle_semi_bold"
                android:textSize="10sp"
                android:layout_marginTop="33dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:textAllCaps="true"
                app:layout_constraintTop_toBottomOf="@id/total_due_cons_layout"
                app:layout_constraintStart_toStartOf="parent"/>


            <include layout="@layout/your_credit_score"
                android:id="@+id/your_credit_score"
                app:layout_constraintTop_toBottomOf="@id/your_credit_score_text"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/action_recommended_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_recommended"
                android:textColor="#6E7170"
                android:fontFamily="@font/basier_circle_semi_bold"
                android:textSize="10sp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:textAllCaps="true"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/your_credit_score"
                app:layout_constraintStart_toStartOf="parent"/>

            <include layout="@layout/action_recommended_layout"
                android:id="@+id/action_recommended_layout"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintTop_toBottomOf="@id/action_recommended_text"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</layout>