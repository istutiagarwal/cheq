<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_top_bar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="20sp"
            android:textColor="#131314"
            android:fontFamily="@font/basier_circle_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toStartOf="@id/profile"
            android:background="@drawable/rounded_corner_bg">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/chips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/chip_count"
                android:paddingStart="12.67dp"
                android:paddingEnd="5.11dp"
                android:paddingTop="8dp"
                android:paddingBottom="7dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/single_chips"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/chip_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                android:paddingEnd="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintEnd_toStartOf="@id/chips"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/profile"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>